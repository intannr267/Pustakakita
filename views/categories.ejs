<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>PustakaKita - All Categories</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="font-sans overflow-x-hidden">
  <%- include('./partials/nav') %>

  <main class="flex-grow px-6 py-20">
    <h1 class="text-3xl font-bold text-center mb-6 text-yellow-900">All Categories</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% categories.forEach(el => { %>
        <a href="/categories/<%= el.id %>/books">
          <div class="bg-white border border-yellow-200 rounded-xl shadow-sm hover:shadow-md transition duration-300">
            <div class="p-4">
              <h2 class="text-lg font-semibold text-yellow-900 mb-1">
                <%= el.name %>
              </h2>
            </div>
          </div>
        </a>
      <% }) %>
    </div>
  </main>
</body>

</html>
