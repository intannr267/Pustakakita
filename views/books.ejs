<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>PustakaKita - Book Collection</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-yellow-50 min-h-screen flex flex-col font-serif">

  <!-- Navbar -->
  <nav class="bg-yellow-900 text-white shadow-md py-4 px-6 flex justify-between items-center">
    <div class="text-2xl font-bold">ðŸ“š PustakaKita</div>
    <ul class="flex gap-6 text-white font-medium">
      <li><a href="/" class="hover:text-yellow-300 transition">Home</a></li>
      <li><a href="/books" class="hover:text-yellow-300 transition">Books</a></li>
      <li><a href="/about" class="hover:text-yellow-300 transition">About</a></li>
    </ul>
  </nav>

  <!-- Main Content -->
  <main class="flex-grow px-6 py-10">
    <h1 class="text-3xl font-bold text-center mb-6 text-yellow-900">Book Collection</h1>

    <!-- Search Bar -->
    <div class="max-w-md mx-auto mb-8">
      <form action="/books/search" method="GET" class="flex shadow-md rounded-lg overflow-hidden">
        <input type="text" name="q" placeholder="Search by title, author, or ISBN"
          class="flex-grow px-4 py-2 text-brown-900 focus:outline-none focus:ring-2 focus:ring-yellow-800">
        <button type="submit"
          class="bg-yellow-800 text-white px-4 py-2 hover:bg-yellow-700 transition">Search</button>
      </form>
    </div>

    <!-- Book Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% books.forEach(book => { %>
        <div class="bg-white border border-yellow-200 rounded-xl shadow-sm hover:shadow-md transition duration-300">
          <img src="<%= book.imageURL %>" alt="<%= book.title %>" class="w-full h-60 object-cover">
          <div class="p-4">
            <h2 class="text-lg font-semibold text-yellow-900 mb-1"><%= book.title %></h2>
            <p class="text-sm text-yellow-700 mb-1">Publisher: <%= book.publisher %></p>
            <p class="text-sm text-yellow-700">Pages: <%= book.pageCount %></p>
            <p class="text-xs text-yellow-500 mt-2">ISBN: <%= book.isbn %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-yellow-900 text-yellow-100 py-4 text-center text-sm">
    &copy; 2025 PustakaKita. All rights reserved.
  </footer>

</body>

</html>
